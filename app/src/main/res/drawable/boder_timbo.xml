<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充颜色 -->
    <solid android:color="@color/white" />

    <!--设置圆角弧度-->
    <corners android:radius="360dip" />

    <!--边框宽度及颜色-->
    <stroke
        android:width="@dimen/dip_2"
        android:color="#71bfc9" />

    <!--文字与边界的距离-->
    <padding
        android:bottom="@dimen/dip_10"
        android:left="@dimen/dip_10"
        android:right="@dimen/dip_10"
        android:top="@dimen/dip_10" />
</shape>
