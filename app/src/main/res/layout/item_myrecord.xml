<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dip_10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/dip_50"
        android:layout_height="@dimen/dip_50"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dip_30"
        android:layout_marginTop="@dimen/dip_5"
        android:src="@mipmap/icon_touxaing" />

    <LinearLayout
        android:layout_width="@dimen/dip_200"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_5"
            android:drawablePadding="@dimen/dip_5"
            android:drawableRight="@mipmap/icon_rightbg"
            android:text="晒技能"
            android:textColor="@color/fond_cloer"
            android:textSize="@dimen/fond_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王老五去打富帅康旗下企业王老五去打富帅康旗下企业王老五去打富帅康旗下企业王老五去打富帅康旗下企业"
            android:textSize="@dimen/fond_12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_5"
        android:orientation="vertical"
        android:paddingRight="@dimen/dip_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="2018.1.1"
            android:textColor="@color/fond_cloer"
            android:textSize="@dimen/fond_14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dip_15"
            android:drawableRight="@mipmap/icon_zan"
            android:text="5"
            android:textColor="@color/fond_cloer"
            android:textSize="@dimen/fond_14sp" />
    </LinearLayout>
</LinearLayout>
