<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dip_10"
    android:layout_margin="@dimen/dip_10"
    android:background="@drawable/ques_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/itemAlbumHader"
        android:layout_width="0dip"
        android:src="@mipmap/icon_mylbum_title"
        android:layout_height="match_parent"
        android:layout_weight="6" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7/1日"
            android:layout_marginLeft="@dimen/dip_10"
            android:textColor="@color/fond_cloer"
            android:textSize="@dimen/fond_20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dip_10"
            android:drawableLeft="@mipmap/icon_see"
            android:drawablePadding="@dimen/dip_5"
            android:text="14563" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_marginTop="@dimen/dip_10"
            android:text="写了N次作业，有补翻奥数，架子平夺仍需仍需仍需仍需仍需脸仍需夺地圾有圾"
            android:textColor="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dip_10"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_marginTop="@dimen/dip_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemAlbumMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_pl"
                android:drawablePadding="@dimen/dip_5"
                android:gravity="right"
                android:text="5532"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_zhan"
                android:drawablePadding="@dimen/dip_5"
                android:gravity="right"
                android:text="1205"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_13sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
