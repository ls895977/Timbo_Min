<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6c76d"
            android:orientation="vertical"
            android:paddingTop="@dimen/dip_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/member_fanhui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dip_10"
                    android:src="@mipmap/icon_fanhui1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/dip_10"
                    android:drawableRight="@mipmap/icon_qehuan"
                    android:padding="@dimen/dip_10"
                    android:text="角色切换"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/my_hader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dip_20">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/dip_90"
                    android:layout_height="@dimen/dip_90"
                    android:layout_marginLeft="@dimen/dip_30"
                    android:layout_marginTop="@dimen/dip_5"
                    android:src="@mipmap/icon_touxaing" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王晓蒙"
                        android:textSize="@dimen/fond_18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_5"
                        android:text="登录账号：13889333253"
                        android:textSize="@dimen/fond_16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_5"
                        android:text="当前级别：小队长"
                        android:textSize="@dimen/fond_16sp" />

                    <RelativeLayout
                        android:layout_width="@dimen/dip_80"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_5"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/member_SignIn_Statics"
                            android:layout_width="@dimen/dip_80"
                            android:layout_height="@dimen/dip_30"
                            android:background="@drawable/cb_singin" />
                        <TextView
                            android:id="@+id/member_SignIn_Right"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:text="已签到"
                            android:layout_alignParentRight="true"
                            android:paddingRight="@dimen/dip_10"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/fond_10sp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/member_SignIn_Left"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:text="未签到"
                            android:layout_alignParentleft="true"
                            android:paddingLeft="@dimen/dip_10"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/fond_10sp"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dip_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_memberselect"
                android:paddingBottom="@dimen/dip_20">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dip_20"
                    android:layout_marginTop="@dimen/dip_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日计划" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:text="等待完成"
                        android:textColor="@color/movem_color"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/dip_140"
                android:layout_height="@dimen/dip_70"
                android:layout_marginLeft="@dimen/dip_20"
                android:src="@mipmap/icon_ynudong" />
        </RelativeLayout>

        <com.example.lishan.timbo_min.view.MyGridView
            android:id="@+id/memberGridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dip_80"
            android:numColumns="2" />

    </LinearLayout>
</ScrollView>