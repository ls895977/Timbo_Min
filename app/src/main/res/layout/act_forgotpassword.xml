<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dip_80"
        android:text="密码找回"
        android:textColor="@color/mycolor"
        android:textSize="@dimen/dip_20" />

    <EditText
        android:id="@+id/forgotpassword_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_20"
        android:background="@drawable/shape_corner"
        android:hint="输入手机号码"
        android:padding="@dimen/dip_5"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_10"
        android:background="@drawable/shape_corner"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:background="@color/white"
            android:hint="输入验证码"
            android:padding="@dimen/dip_5"  />

        <com.example.lishan.timbo_min.view.CountdownButton
            android:id="@+id/forgotpassword_countdownButton"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:layout_height="@dimen/dip_30"
            android:textSize="@dimen/fond_12sp"
            android:layout_margin="@dimen/dip_2"
            android:background="@drawable/btn_bg_normal11" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_10"
        android:background="@drawable/shape_corner"
        android:hint="输入密码"
        android:padding="@dimen/dip_5"  />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:layout_margin="@dimen/dip_20"
        android:background="@drawable/btn_selector"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/fond_16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:text="立即注册"
        android:textSize="@dimen/fond_16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dip_40"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weixin" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_10"
            android:src="@mipmap/qq" />
    </LinearLayout>
</LinearLayout>
