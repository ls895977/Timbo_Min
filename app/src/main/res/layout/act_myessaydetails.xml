<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f8f6"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/growthrecord_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dip_30"
        android:src="@mipmap/icon_hader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dip_10"
        android:text="刘晓萌" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dip_15"
        android:layout_marginTop="@dimen/dip_20"
        android:text="重写"
        android:textColor="@color/fond_cloer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_200"
        android:layout_marginBottom="@dimen/dip_20"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_10"
        android:layout_marginTop="@dimen/dip_10"
        android:background="@drawable/ques_bg"
        android:orientation="vertical">
    </LinearLayout>
    <TextView
        android:id="@+id/growthrecord_details_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_20"
        android:background="@drawable/bt_growthrecord_details"
        android:gravity="center_horizontal"
        android:text="提    交"
        android:textColor="@color/white"
        android:textSize="@dimen/fond_18sp" />
</LinearLayout>

