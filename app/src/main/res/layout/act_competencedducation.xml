<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f3"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_zaixian" />

            <ImageView
                android:id="@+id/competencedducation_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dip_25"
                android:paddingLeft="@dimen/dip_10"
                android:paddingRight="@dimen/dip_10"
                android:src="@mipmap/icon_mygrowth_title" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dip_10">
            <TextView
                android:id="@+id/CompetencEdducation_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dip_10"
                android:text="分类" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dip_40"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_weight="1"
                android:background="@drawable/bt_arenaselect"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_fa" />

                <EditText
                    android:layout_width="@dimen/dip_80"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_chaa" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dip_10"
                android:text="上海" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dip_10">

            <TextView
                android:id="@+id/item_CompetencEdducatio_zuixin"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="最新"
                android:textColor="@drawable/tv_arena_color" />

            <TextView
                android:id="@+id/item_CompetencEdducatio_zuire"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="最热"
                android:textColor="@drawable/tv_arena_color" />

            <TextView
                android:id="@+id/item_CompetencEdducatio_haopin"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="好评"
                android:textColor="@drawable/tv_arena_color" />

            <TextView
                android:id="@+id/item_CompetencEdducatio_zuijin"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="最近"
                android:textColor="@drawable/tv_arena_color" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_margin="@dimen/dip_10"
            android:id="@+id/myCompetencedducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/icon_competebuttom"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="@dimen/dip_120" />
    </LinearLayout>
</ScrollView>