<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dip_10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activityrecord_image"
        android:layout_width="@dimen/dip_50"
        android:layout_height="@dimen/dip_50"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dip_15"
        android:layout_marginTop="@dimen/dip_5"
        android:src="@mipmap/icon_touxaing" />

    <LinearLayout
        android:layout_width="@dimen/dip_180"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_toRightOf="@+id/activityrecord_image"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_5"
            android:drawablePadding="@dimen/dip_5"
            android:drawableRight="@mipmap/icon_rightbg"
            android:text="迎春户外活动欢迎报名"
            android:textColor="@color/fond_cloer"
            android:textSize="@dimen/fond_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_qi"
            android:drawablePadding="@dimen/dip_5"
            android:text="诸暨文莱教育"
            android:textSize="@dimen/fond_13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_dw"
            android:drawablePadding="@dimen/dip_5"
            android:text="诸暨市万达广场"
            android:textSize="@dimen/fond_13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dip_10"
        android:orientation="vertical"
        android:paddingRight="@dimen/dip_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dip_10"
            android:text="活动日期：2017.11.22"
            android:textSize="@dimen/fond_10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_marginTop="@dimen/dip_5"
            android:text="活动时间：09:30"
            android:textSize="@dimen/fond_10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_marginTop="@dimen/dip_5"
            android:text="报名情况：5人"
            android:textSize="@dimen/fond_10sp" />

    </LinearLayout>
</RelativeLayout>
