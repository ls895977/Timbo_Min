<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing"
    android:paddingTop="@dimen/dip_10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_15"
            android:padding="@dimen/dip_15"
            android:src="@mipmap/back_icon" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dip_20"
        android:text="注册账号"
        android:textColor="@color/white"
        android:textSize="@dimen/dip_20" />
    <EditText
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_20"
        android:background="@drawable/shape_corner"
        android:hint="输入手机号码"
        android:inputType="number"
        android:padding="@dimen/dip_10"
        android:textSize="@dimen/fond_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_10"
        android:background="@drawable/shape_corner"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_code"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:background="@color/white"
            android:hint="输入验证码"
            android:inputType="number"
            android:padding="@dimen/dip_10"
            android:textSize="@dimen/fond_14sp" />

        <com.example.lishan.timbo_min.view.CountdownButton
            android:id="@+id/countdownButton"
            android:layout_width="0dip"
            android:layout_height="@dimen/dip_30"
            android:layout_margin="@dimen/dip_2"
            android:layout_weight="2"
            android:background="@drawable/btn_bg_normal11"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_12sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/register_pwd"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_10"
        android:padding="@dimen/dip_10"
        android:textSize="@dimen/fond_14sp"
        android:background="@drawable/shape_corner"
        android:hint="输入密码" />

    <LinearLayout
        android:id="@+id/register_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_10"
        android:background="@drawable/shape_corner"
        android:orientation="horizontal"
        android:padding="@dimen/dip_5">

        <TextView
            android:id="@+id/rg_shen"
            android:layout_width="@dimen/dip_80"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/down_icon"
            android:drawablePadding="@dimen/dip_5"
            android:text="省" />

        <TextView
            android:id="@+id/rg_shi"
            android:layout_width="@dimen/dip_60"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/down_icon"
            android:drawablePadding="@dimen/dip_5"
            android:text="市" />

        <TextView
            android:id="@+id/rg_qu"
            android:layout_width="@dimen/dip_60"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/down_icon"
            android:drawablePadding="@dimen/dip_5"
            android:text="区" />
    </LinearLayout>

    <EditText
        android:id="@+id/register_SchoolName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_10"
        android:background="@drawable/shape_corner"
        android:hint="输入学校名称"
        android:padding="@dimen/dip_10"
        android:textSize="@dimen/fond_14sp" />
    <TextView
        android:id="@+id/register_nianjibanji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_10"
        android:background="@drawable/shape_corner"
        android:padding="@dimen/dip_10"
        android:textSize="@dimen/fond_14sp" />
    <Button
        android:id="@+id/rg_next_step"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:layout_margin="@dimen/dip_20"
        android:background="@drawable/btn_registerselector"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/fond_16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="点击上面 下一步 按钮，既代表你同意" />

    <CheckBox
        android:id="@+id/register_chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="《用户服务协议》"
        android:textColor="#49a9f1" />
</LinearLayout>
