<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dip_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新建计划名称"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_16sp" />

            <EditText
                android:id="@+id/dlgCre_project"
                android:layout_width="@dimen/dip_200"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体    重"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_16sp" />

            <EditText
                android:id="@+id/dlgCre_gongjin"
                android:layout_width="@dimen/dip_90"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公斤"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每    日"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_16sp" />

            <EditText
                android:id="@+id/dlgCre_gongli"
                android:layout_width="@dimen/dip_80"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:inputType="number" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公里"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时    长"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_16sp" />

            <EditText
                android:id="@+id/dlgCre_time"
                android:layout_width="@dimen/dip_80"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:inputType="number" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分钟"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dip_15"
            android:paddingBottom="@dimen/dip_15"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_b1"
                android:layout_width="wrap_content"
                android:textColor="@drawable/dlg_fond"
                android:layout_height="wrap_content"
                android:background="@drawable/dlg_boder"
                android:paddingBottom="@dimen/dip_10"
                android:paddingLeft="@dimen/dip_25"
                android:paddingRight="@dimen/dip_25"
                android:paddingTop="@dimen/dip_10"
                android:text="步行" />

            <TextView
                android:id="@+id/tv_b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:background="@drawable/dlg_boder"
                android:paddingBottom="@dimen/dip_10"
                android:paddingLeft="@dimen/dip_25"
                android:textColor="@drawable/dlg_fond"
                android:paddingRight="@dimen/dip_25"
                android:paddingTop="@dimen/dip_10"
                android:text="慢跑" />

            <TextView
                android:id="@+id/tv_b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:background="@drawable/dlg_boder"
                android:paddingBottom="@dimen/dip_10"
                android:paddingLeft="@dimen/dip_25"
                android:textColor="@drawable/dlg_fond"
                android:paddingRight="@dimen/dip_25"
                android:paddingTop="@dimen/dip_10"
                android:text="中速度" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计消耗"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_16sp" />

            <TextView
                android:id="@+id/createaplan_data"
                android:layout_width="@dimen/dip_80"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#fd7f33"
                android:textSize="@dimen/fond_22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大卡"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_16sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/dlgCre_click1s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_60"
            android:layout_marginRight="@dimen/dip_60"
            android:layout_marginTop="@dimen/dip_40"
            android:background="@drawable/bt_growthrecord_details"
            android:gravity="center_horizontal"
            android:text="提    交"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_18sp" />

    </LinearLayout>
</LinearLayout>
