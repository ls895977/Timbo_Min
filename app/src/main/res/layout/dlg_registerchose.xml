<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dip_40"
    android:layout_marginLeft="@dimen/dip_20"
    android:layout_marginRight="@dimen/dip_20">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dlg_register"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/registerchose_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_30"></android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dip_5"
                android:text="以上没有找到"
                android:textColor="@color/fond_cloer" />

            <TextView
                android:id="@+id/register_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dip_20"
                android:background="@drawable/bt_select1"
                android:gravity="center_horizontal"
                android:padding="@dimen/dip_10"
                android:text="我来创建"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/register_shutdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/dip_15"
        android:paddingLeft="@dimen/dip_15"
        android:paddingRight="@dimen/dip_30"
        android:paddingTop="@dimen/dip_15"
        android:src="@mipmap/icon_guan" />
</RelativeLayout>