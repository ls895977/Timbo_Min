<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/releaseactivities2_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10"
            android:src="@mipmap/icon_mygrowth_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/dip_10"
                android:background="@drawable/boder_releaseactivities1yanse4"
                android:orientation="vertical"
                android:padding="@dimen/dip_10"
                android:paddingTop="@dimen/dip_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:layout_marginRight="@dimen/dip_10"
                    android:layout_marginTop="@dimen/dip_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/releaseactivities1_kaishi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联  系  人" />

                    <EditText
                        android:id="@+id/releaseactivities2_enroll_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dip_5"
                        android:layout_toRightOf="@+id/releaseactivities1_kaishi"
                        android:background="@drawable/boder_releaseactivities"
                        android:drawablePadding="@dimen/dip_5"
                        android:drawableRight="@mipmap/icon_ge1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/dip_5"
                        android:textSize="@dimen/fond_14sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:layout_marginRight="@dimen/dip_10"
                    android:layout_marginTop="@dimen/dip_20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/releaseactivities1_jieshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话" />

                    <EditText
                        android:id="@+id/releaseactivities2_enroll_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dip_5"
                        android:layout_toRightOf="@+id/releaseactivities1_jieshu"
                        android:background="@drawable/boder_releaseactivities"
                        android:drawablePadding="@dimen/dip_5"
                        android:drawableRight="@mipmap/icon_dh"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/dip_5"
                        android:textSize="@dimen/fond_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:layout_marginRight="@dimen/dip_10"
                    android:layout_marginTop="@dimen/dip_20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/releaseactivities1_weixinhao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信号码" />

                    <EditText
                        android:id="@+id/releaseactivities2_enroll_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_5"
                        android:layout_marginRight="@dimen/dip_5"
                        android:layout_weight="1"
                        android:background="@drawable/boder_releaseactivities"
                        android:drawablePadding="@dimen/dip_5"
                        android:drawableRight="@mipmap/icon_wx"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/dip_5"
                        android:textSize="@dimen/fond_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:layout_marginRight="@dimen/dip_10"
                    android:layout_marginTop="@dimen/dip_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电子邮箱" />

                    <EditText
                        android:id="@+id/releaseactivities2_enroll_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_5"
                        android:layout_marginRight="@dimen/dip_5"
                        android:layout_weight="1"
                        android:background="@drawable/boder_releaseactivities"

                        android:drawablePadding="@dimen/dip_5"
                        android:drawableRight="@mipmap/icon_emil"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/dip_5"
                        android:textSize="@dimen/fond_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dip_20"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:layout_marginRight="@dimen/dip_10"
                    android:layout_marginTop="@dimen/dip_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    QQ      " />

                    <EditText
                        android:id="@+id/releaseactivities2_enroll_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_5"
                        android:layout_marginRight="@dimen/dip_5"
                        android:layout_toRightOf="@+id/releaseactivities1_didian"
                        android:layout_weight="1"
                        android:background="@drawable/boder_releaseactivities"
                        android:drawablePadding="@dimen/dip_5"
                        android:drawableRight="@mipmap/icon_qq"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/dip_5"
                        android:textSize="@dimen/fond_14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#f7f7f7"
                android:paddingLeft="@dimen/dip_10"
                android:paddingRight="@dimen/dip_10"
                android:text="联络"
                android:textColor="#96d9d2"
                android:textSize="@dimen/fond_18sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:layout_marginTop="@dimen/dip_10"
                android:background="@drawable/boder_releaseactivities1yanse5"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dip_10"
                android:paddingTop="@dimen/dip_20">

                <ImageView
                    android:layout_width="@dimen/dip_60"
                    android:layout_height="@dimen/dip_60"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_tu111" />

                <ImageView
                    android:layout_width="@dimen/dip_60"
                    android:layout_height="@dimen/dip_60"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_pai" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#f7f7f7"
                android:paddingLeft="@dimen/dip_10"
                android:paddingRight="@dimen/dip_10"
                android:text="晒图"
                android:textColor="#9283bc"
                android:textSize="@dimen/fond_18sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/releaseactivities23_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dip_20"
            android:background="@drawable/btn_bg_normal11"
            android:gravity="center_horizontal"
            android:padding="@dimen/dip_10"
            android:text="提交"
            android:textColor="@color/white" />


    </LinearLayout>
</ScrollView>