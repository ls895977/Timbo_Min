<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mystudy_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dip_10"
                android:src="@mipmap/icon_mygrowth_title" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dip_10"
                android:src="@mipmap/icon_fen" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_shaij" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_qi"
                        android:drawablePadding="@dimen/dip_5"
                        android:text="诸暨文莱教育"
                        android:textSize="@dimen/fond_12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_dw"
                        android:drawablePadding="@dimen/dip_5"
                        android:text="诸暨市万达广场"
                        android:textSize="@dimen/fond_12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/dip_10"
            android:paddingTop="@dimen/dip_10"
            android:text="报名说明"
            android:textColor="@color/fond_cloer"
            android:textSize="@dimen/fond_16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_5"
            android:layout_marginRight="@dimen/dip_5"
            android:text="简介：中国工程院2017夺肝肝肝会肝仍需肝会仍需仍需地肝肝圾脍仍需肝地脸会仍需肝肝会仍需仍需脍仍需仍需仍需人" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_100"
                android:layout_marginLeft="@dimen/dip_5"
                android:layout_marginRight="@dimen/dip_5"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_cc" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_100"
                android:layout_marginLeft="@dimen/dip_5"
                android:layout_marginRight="@dimen/dip_5"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_cc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_100"
                android:layout_marginLeft="@dimen/dip_5"
                android:layout_marginRight="@dimen/dip_5"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_cc" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_100"
                android:layout_marginLeft="@dimen/dip_5"
                android:layout_marginRight="@dimen/dip_5"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_cc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="孩子名字"
                android:textSize="@dimen/fond_16sp" />

            <EditText
                android:layout_width="@dimen/dip_150"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dip_5"
                android:background="@drawable/mystudy_ed" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="孩子年龄"
                android:textSize="@dimen/fond_16sp" />

            <EditText
                android:layout_width="@dimen/dip_150"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dip_5"
                android:background="@drawable/mystudy_ed" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textSize="@dimen/fond_16sp" />

            <EditText
                android:layout_width="@dimen/dip_150"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dip_5"
                android:background="@drawable/mystudy_ed" />
        </LinearLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip_5"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男孩" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女孩" />
        </RadioGroup>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="报名费用："
                android:textSize="@dimen/fond_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/fond_18sp"
                android:text="50元"
                android:textColor="@color/movem_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/dip_10"
            android:layout_gravity="center_horizontal"
            android:text="我要报名"
            android:paddingTop="@dimen/dip_5"
            android:paddingBottom="@dimen/dip_5"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg_normal11"
            android:paddingRight="@dimen/dip_25"
            android:paddingLeft="@dimen/dip_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_10"
            android:background="@mipmap/icon_zwt" />
    </LinearLayout>
</ScrollView>