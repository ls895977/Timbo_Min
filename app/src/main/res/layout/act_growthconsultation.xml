<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dip_20">

            <ImageView
                android:id="@+id/growthconsultation_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dip_10"
                android:src="@mipmap/icon_hui" />

            <TextView
                android:id="@+id/growthconsultation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/dip_10"
                android:textSize="@dimen/fond_18sp" />

            <ImageView
                android:id="@+id/growthconsultation_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dip_10"
                android:src="@mipmap/icon_fen" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_10"
            android:background="#f5f5f5">

            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/growth_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dip_10"
                android:background="@color/white"
                android:divider="#ffff0000" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/growth_show"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_70"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/growth_wenhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/icon_wenhao" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:layout_alignParentBottom="true"
            android:alpha="0.9"
            android:background="@color/white">

            <ImageView
                android:id="@+id/growth_chacha"
                android:layout_width="@dimen/dip_20"
                android:layout_height="@dimen/dip_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dip_20"
                android:background="@mipmap/icon_ca" />
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/growth_banwenhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dip_20"
        android:background="@mipmap/icon_banwenhao"
        android:visibility="gone" />
</RelativeLayout>