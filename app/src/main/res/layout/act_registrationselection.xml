<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing"
    android:orientation="vertical"
    android:paddingTop="@dimen/dip_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_15"
            android:src="@mipmap/back_icon" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dip_20"
        android:text="注册中心"
        android:textColor="@color/white"
        android:textSize="@dimen/dip_20" />

    <TextView
        android:id="@+id/I_am_a_student"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_80"
        android:background="@drawable/btn_registerselector"
        android:gravity="center"
        android:text="我是学生"
        android:textColor="@color/white"
        android:textSize="@dimen/fond_16sp" />

    <TextView
        android:id="@+id/Teacher"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_15"
        android:background="#ff9c2f"
        android:gravity="center"
        android:text="我是老师"
        android:textColor="@color/white"
        android:textSize="@dimen/fond_16sp" />

    <TextView
        android:id="@+id/mechanism"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginRight="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_15"
        android:background="@drawable/tv_chongzhi"
        android:gravity="center"
        android:text="我是机构"
        android:textColor="@color/white"
        android:textSize="@dimen/fond_16sp" />
</LinearLayout>
