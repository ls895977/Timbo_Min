<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dip_10"
    android:background="@drawable/ques_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_20"
        android:layout_marginTop="@dimen/dip_10"
        android:text="7/1日"
        android:textColor="@color/fond_cloer"
        android:textSize="@dimen/fond_20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myyessay_image"
            android:layout_width="@dimen/dip_80"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/dip_80"
            android:layout_marginLeft="@dimen/dip_20"
            android:src="@mipmap/icon_hader" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_5"
            android:layout_marginBottom="@dimen/dip_20"
            android:layout_marginLeft="@dimen/dip_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动时间：2017.11.22"
                android:textColor="@color/fond_cloer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_5"
                android:text="迎春户外活动欢迎报名"
                android:textColor="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dip_5"
                android:drawableLeft="@mipmap/icon_qi"
                android:layout_marginTop="@dimen/dip_5"
                android:text="诸暨文莱教育"
                android:textColor="@color/gray" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dip_5"
                android:drawableLeft="@mipmap/icon_dw"
                android:layout_marginTop="@dimen/dip_5"
                android:text="诸暨文莱教育"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
