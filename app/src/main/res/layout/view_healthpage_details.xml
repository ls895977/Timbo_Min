<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dip_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dip_20"
        android:visibility="gone">

        <ImageView
            android:id="@+id/healthpage_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10"
            android:src="@mipmap/icon_hui" />

        <TextView
            android:id="@+id/healthpage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/dip_10"
            android:textSize="@dimen/fond_18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_10"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dip_10">

        <TextView
            android:id="@+id/healthpage_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dip_10"
            android:text="樱桃吃多了会上火么"
            android:textColor="@color/fond_cloer"
            android:textSize="@dimen/fond_16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/dip_30"
                android:layout_height="@dimen/dip_30"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp" />

            <TextView
                android:id="@+id/healthpage_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dip_5"
                android:layout_toRightOf="@+id/profile_image"
                android:text="萌萌" />

            <TextView
                android:id="@+id/healthpage_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dip_5"
                android:layout_toLeftOf="@+id/healthpage_detailskan"
                android:drawableLeft="@mipmap/icon_lun"
                android:drawablePadding="@dimen/dip_5"
                android:text="0" />

            <TextView
                android:id="@+id/healthpage_detailskan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_ka"
                android:drawablePadding="@dimen/dip_5"
                android:text="0" />
        </RelativeLayout>

        <TextView
            android:id="@+id/healthpage_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_5"
            android:text="中国吃在在在寺地脍仍需仍需仍需仍需仍需你feqe坎坷qwefqwefqwefqwef锊qwef仍需釜qwef地" />

        <ImageView
            android:id="@+id/healthpage_haderImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_140"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dip_5"
                android:layout_marginTop="@dimen/dip_10"
                android:text="举报" />

            <TextView
                android:id="@+id/healthpage_details_huida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dip_5"
                android:text="我的回答..." />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
