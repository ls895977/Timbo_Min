<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <RelativeLayout
        android:visibility="gone"
        android:paddingTop="@dimen/dip_30"
        android:id="@+id/Relative_noDaata"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dip_60"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dip_60"
                android:layout_height="@dimen/dip_60"
                android:layout_gravity="center"
                android:src="@mipmap/icon_nodata" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dip_10"
                android:gravity="center"
                android:text="很抱歉没有找到您想要的"
                android:textColor="@drawable/tv_arena_color"
                android:textSize="@dimen/fond_14sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_latesactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dip_1"
        android:layout_marginLeft="@dimen/dip_1"
        android:layout_marginRight="@dimen/dip_1"
        android:background="@color/white"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_latesactivityties_profile_image"
            android:layout_width="@dimen/dip_45"
            android:layout_height="@dimen/dip_45"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/dip_10"
            android:layout_marginLeft="@dimen/dip_20"
            android:layout_marginTop="@dimen/dip_10"
            android:src="@mipmap/icon_hader" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginTop="@dimen/dip_10"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dip_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_latesactivityties_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="迎春户外活动欢迎报名"
                    android:textColor="@color/fond_cloer"
                    android:textSize="@dimen/fond_14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_latesactivityties_act_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dip_10"
                    android:text="1小时" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_latesactivityties_com_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_qi"
                    android:drawablePadding="@dimen/dip_5"
                    android:text="诸暨文莱教育"
                    android:textSize="@dimen/fond_13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:drawableLeft="@mipmap/icon_jin"
                    android:drawablePadding="@dimen/dip_5"
                    android:text="认证企业（5）"
                    android:textColor="@color/movem_color"
                    android:textSize="@dimen/fond_13sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_5">

                <TextView
                    android:id="@+id/item_latesactivityties_act_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_dw"
                    android:drawablePadding="@dimen/dip_5"
                    android:text="诸暨市万达广场"
                    android:textSize="@dimen/fond_13sp" />

                <TextView
                    android:id="@+id/item_latesactivityties_ctime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dip_5"
                    android:text="活动时间 ：2017.11.22"
                    android:textSize="@dimen/fond_13sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>