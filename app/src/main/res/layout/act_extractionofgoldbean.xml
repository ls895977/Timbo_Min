<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dip_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dip_20">

        <ImageView
            android:id="@+id/ExtractionOfGoldBean_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10"
            android:src="@mipmap/icon_hui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/dip_10"
            android:text="提现申请"
            android:textSize="@dimen/fond_18sp" />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_40"
        android:layout_marginRight="@dimen/dip_40"
        android:layout_marginTop="@dimen/dip_40"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:padding="@dimen/dip_10"
        android:textSize="@dimen/fond_22sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_2"
        android:layout_marginLeft="@dimen/dip_40"
        android:layout_marginRight="@dimen/dip_40"
        android:background="#e0e0e0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dip_20"
        android:text="账户信息"
        android:textSize="@dimen/fond_18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:layout_marginLeft="@dimen/dip_40"
        android:layout_marginRight="@dimen/dip_40"
        android:layout_marginTop="@dimen/dip_20">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="账户名称"
            android:inputType="number"
            android:padding="@dimen/dip_10"
            android:textSize="@dimen/fond_14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="@dimen/fond_22sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_2"
        android:layout_marginLeft="@dimen/dip_40"
        android:layout_marginRight="@dimen/dip_40"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:layout_marginLeft="@dimen/dip_40"
        android:layout_marginRight="@dimen/dip_40"
        android:layout_marginTop="@dimen/dip_20">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="账户名称"
            android:inputType="number"
            android:padding="@dimen/dip_10"
            android:textSize="@dimen/fond_14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="@dimen/fond_22sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_2"
        android:layout_marginLeft="@dimen/dip_40"
        android:layout_marginRight="@dimen/dip_40"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_40"
        android:layout_marginLeft="@dimen/dip_40"
        android:layout_marginRight="@dimen/dip_40"
        android:layout_marginTop="@dimen/dip_20">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="开户银行"
            android:inputType="number"
            android:padding="@dimen/dip_10"
            android:textSize="@dimen/fond_14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_2"
        android:layout_marginLeft="@dimen/dip_40"
        android:layout_marginRight="@dimen/dip_40"
        android:background="#e0e0e0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_40"
        android:layout_marginRight="@dimen/dip_40"
        android:layout_marginTop="@dimen/dip_20"
        android:text="注：非银行账户不用填写开户行"
        android:textSize="@dimen/fond_12sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dip_15"
        android:background="@drawable/tv_chongzhi"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white" />
</LinearLayout>
