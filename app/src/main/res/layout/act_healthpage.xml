<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_m1" />

        <com.example.lishan.timbo_min.view.MyGridView
            android:id="@+id/healthpage_myGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_10"
            android:numColumns="3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_20"
            android:layout_marginRight="@dimen/dip_20"
            android:background="#f7f7f7">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_5"
                android:background="@mipmap/icon_fa" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_30"
                android:background="@null"
                android:padding="@dimen/dip_5" />

            <ImageView
                android:layout_width="@dimen/dip_20"
                android:layout_height="@dimen/dip_20"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dip_5"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_guan" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_10"
            android:background="#f5f5f5">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/healthpageRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dip_10"
                android:background="@color/white"
                android:divider="#ffff0000" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>