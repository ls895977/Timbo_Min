<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010101">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_200"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_tms" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <EditText
            android:background="@drawable/tv_picture_browsing"
            android:id="@+id/piture_browsing_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dip_20"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:minLines="1"
            android:focusable="false"
            android:filterTouchesWhenObscured="false"
            android:text="在在在在在村肝仍需仍需仍需起作用起作用仍需仍需仍需舒服仍需人彩云追月地脍仍需仍需"
            android:textColor="@drawable/ed_clolor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dip_10"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="@dimen/dip_10"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itempictureBrowsingMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_pl1"
                    android:drawablePadding="@dimen/dip_5"
                    android:gravity="right"
                    android:text="5532"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fond_13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dip_5"
                    android:drawableLeft="@mipmap/icon_zhan1"
                    android:drawablePadding="@dimen/dip_5"
                    android:gravity="right"
                    android:text="1205"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fond_13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dip_10"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/picture_write"
                    android:padding="@dimen/dip_10"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_write"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/picture_ovver"
                    android:visibility="gone"
                    android:padding="@dimen/dip_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
