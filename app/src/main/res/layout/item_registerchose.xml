<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/registerchose_item"
    android:layout_height="wrap_content"
    android:background="#fff3d6"
    android:orientation="vertical"
    android:padding="@dimen/dip_5">

    <RelativeLayout
        android:id="@+id/item_registerchose1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_registerchose_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_hong"
            android:drawablePadding="@dimen/dip_5"
            android:gravity="center_horizontal"
            android:padding="@dimen/dip_5"
            android:text="诸暨市第一小学"
            android:textColor="#000000"
            android:textSize="@dimen/fond_12sp" />

        <TextView
            android:id="@+id/item_choseOnclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/chose_select"
            android:paddingBottom="@dimen/dip_5"
            android:paddingLeft="@dimen/dip_15"
            android:paddingRight="@dimen/dip_15"
            android:paddingTop="@dimen/dip_5"
            android:text="选择"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_registerchose2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_registerchose_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_huang"
            android:drawablePadding="@dimen/dip_5"
            android:gravity="center_horizontal"
            android:padding="@dimen/dip_5"
            android:text="诸暨市第一小学"
            android:textColor="#9b9481"
            android:textSize="@dimen/fond_12sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_1"
        android:background="#fff8e0" />
</LinearLayout>
