<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dip_20">

        <ImageView
            android:id="@+id/ActivityRecord_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10"
            android:src="@mipmap/icon_hui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/dip_10"
            android:text="活动记录"
            android:textSize="@dimen/fond_18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_10">

            <TextView
                android:id="@+id/AdvertisingManagement_tv_Consultation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dip_5"
                android:background="@drawable/integral_select"
                android:text="广告咨询"
                android:textColor="@drawable/tv_clolor" />

            <TextView
                android:id="@+id/AdvertisingManagement_tv_Extension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dip_5"
                android:background="@drawable/integral_select"
                android:text="推广中"
                android:textColor="@drawable/tv_clolor" />
            <TextView
                android:id="@+id/AdvertisingManagement_tv_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dip_5"
                android:background="@drawable/integral_select"
                android:text="购买记录"
                android:textColor="@drawable/tv_clolor" />
        </LinearLayout>
    </RelativeLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/ActivityRecord_xRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_10"></com.jcodecraeer.xrecyclerview.XRecyclerView>
</LinearLayout>
