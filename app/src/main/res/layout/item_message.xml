<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dip_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_message_header"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/dip_30"
                android:layout_height="@dimen/dip_30"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_hader"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_message_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="蒙受欧"
                    android:textColor="@color/fond_cloer"
                    android:textSize="@dimen/fond_14sp" />
                <TextView
                    android:id="@+id/item_message_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="蒙欧"
                    android:textColor="@color/fond_cloer"
                    android:textSize="@dimen/fond_14sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dip_5"
                android:text="1205"
                android:textColor="@color/gray"
                android:textSize="@dimen/fond_12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dip_5"
                android:src="@mipmap/icon_zan" />

            <ImageView
                android:id="@+id/item_message_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dip_5"
                android:src="@mipmap/icon_mesage" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_message_substance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="d在 脍会仍需仍需仍需仍需仍需仍需仍需仍需会仍需仍需仍需会"
        android:textSize="@dimen/fond_14sp" />
</LinearLayout>
