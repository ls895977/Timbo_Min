<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/dip_25"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/arena_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dip_10"
                    android:src="@mipmap/icon_mygrowth_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/Arena_title"
                    android:textColor="@color/fond_cloer"
                    android:textSize="@dimen/fond_18sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dip_40"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:background="@drawable/bt_arenaselect"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_fa" />

                    <EditText
                        android:layout_width="@dimen/dip_80"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_chaa" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dip_15"
                    android:src="@mipmap/icon_laba" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:text="擂主小萌被挑战者晓义击败"
                    android:textColor="@color/movem_color"
                    android:textSize="@dimen/fond_10sp" />
            </LinearLayout>
            <!--<android.support.design.widget.TabLayout-->
            <!--android:id="@+id/myarenatablayout"-->
            <!--app:tabIndicatorColor="@color/white"-->
            <!--android:layout_width="match_parent"-->
            <!--app:tabSelectedTextColor="#565656"-->
            <!--app:tabTextColor="#aaaaaa"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dip_10">

                <TextView
                    android:id="@+id/item_arenachengzhang"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="项目分类"
                    android:textColor="@drawable/tv_arena_color"/>

                <TextView
                    android:id="@+id/item_arenasuibi"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="最新"
                    android:textColor="@drawable/tv_arena_color" />

                <TextView
                    android:id="@+id/item_arenahuodong"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="最热"
                    android:gravity="center"
                    android:textColor="@drawable/tv_arena_color" />

                <TextView
                    android:id="@+id/item_arenaxiangce"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="最近"
                    android:gravity="center"
                    android:textColor="@drawable/tv_arena_color" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f4f4f4">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/arenaRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dip_10" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_zwt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_80"
                android:layout_marginTop="@dimen/dip_20"
                android:gravity="center"
                android:text="版权所有：微聚赢网络科技有限公司" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_2"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/arena_buttom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dip_5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_100"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dip_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刘晓萌"
                        android:textColor="@color/fond_cloer"
                        android:textSize="@dimen/fond_16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fond_14sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dip_5"
                        android:text="10岁" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/arena_jiangbei"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dip_80"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_30"
        android:src="@mipmap/icon_lz" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/dip_60"
        android:layout_height="@dimen/dip_60"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dip_15"
        android:layout_marginLeft="@dimen/dip_20"
        android:src="@mipmap/icon_hader" />
</RelativeLayout>