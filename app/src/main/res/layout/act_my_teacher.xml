<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dip_20">

        <ImageView
            android:id="@+id/MyTeacher_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10"
            android:src="@mipmap/icon_hui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/dip_10"
            android:text="我的老师"
            android:textSize="@dimen/fond_18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dip_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/dip_30"
                android:layout_height="@dimen/dip_30"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginTop="@dimen/dip_5"
                android:src="@mipmap/icon_touxaing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dip_5"
                android:text="王老师"
                android:textSize="@dimen/fond_14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2018.1.23"
            android:textSize="@dimen/fond_10sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_5"
        android:layout_marginRight="@dimen/dip_5"
        android:layout_marginTop="@dimen/dip_10"
        android:background="@drawable/boder_ed"
        android:padding="@dimen/dip_10"
        android:text="学生的作业是教学的酸奶有学生的作业是教学的酸奶有学生的作业是教学的酸奶有学生的作业是教学的酸奶有学生的作业是教学的酸奶有学生的作业是教学的酸奶有学生的作业是教学的酸奶有学生的作业是教学的酸奶有学生的作业是教学的酸奶有学生的作业是教学的酸奶有"
        android:textSize="@dimen/fond_12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dip_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_addimgs" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/dip_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_10"
        android:background="@drawable/bt_teacherclass"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white" />
    <TextView
        android:layout_marginTop="@dimen/dip_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_10"
        android:padding="@dimen/dip_10"
        android:background="@drawable/btn_bg_normal11"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/white" />
</LinearLayout>
