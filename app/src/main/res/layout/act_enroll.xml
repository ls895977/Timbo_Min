<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/enroll_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dip_10"
                android:src="@mipmap/icon_mygrowth_title" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dip_40">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/dip_35"
                android:layout_height="@dimen/dip_35"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginTop="@dimen/dip_5"
                android:src="@mipmap/icon_homejigou" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dip_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_qi"
                        android:drawablePadding="@dimen/dip_5"
                        android:text="诸暨文莱教育"
                        android:textColor="@color/gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_5"
                        android:drawableLeft="@mipmap/icon_jin"
                        android:drawablePadding="@dimen/dip_5"
                        android:text="(5年)"
                        android:textColor="@color/movem_color" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_dw"
                    android:drawablePadding="@dimen/dip_5"
                    android:text="地址：诸暨市万达广场"
                    android:textColor="@color/gray" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dip_10"
            android:layout_marginTop="@dimen/dip_20"
            android:text="报名说明"
            android:textColor="@color/fond_cloer"
            android:textSize="@dimen/fond_18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dip_10"
            android:text="      参观结束后，支部全体党员再一次认真学习十九大报告并结合工作谈认识。全体党员结合自己的本职业" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dip_10">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_100"
                android:layout_marginRight="@dimen/dip_5"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_pdpd" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_100"
                android:layout_marginLeft="@dimen/dip_5"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_pdpd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_100"
                android:layout_marginRight="@dimen/dip_5"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_pdpd" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_100"
                android:layout_marginLeft="@dimen/dip_5"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_pdpd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_30"
            android:layout_marginRight="@dimen/dip_30"
            android:layout_marginTop="@dimen/dip_30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="孩子名字"
                android:textSize="@dimen/fond_16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_weight="1"
                android:background="@drawable/boder_ed"
                android:padding="@dimen/dip_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_30"
            android:layout_marginRight="@dimen/dip_30"
            android:layout_marginTop="@dimen/dip_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="孩子年龄"
                android:textSize="@dimen/fond_16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_weight="1"
                android:background="@drawable/boder_ed"
                android:padding="@dimen/dip_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_30"
            android:layout_marginRight="@dimen/dip_30"
            android:layout_marginTop="@dimen/dip_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="联系电话"
                android:textSize="@dimen/fond_16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_weight="1"
                android:background="@drawable/boder_ed"
                android:padding="@dimen/dip_2" />
        </LinearLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dip_20"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男孩" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_30"
                android:text="女孩" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报名费用："
                android:textColor="@color/fond_cloer"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="@color/movem_color"
                android:textSize="@dimen/fond_20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/movem_color"
                android:textSize="@dimen/fond_16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_bg_normal11"
            android:paddingBottom="@dimen/dip_5"
            android:paddingLeft="@dimen/dip_30"
            android:paddingRight="@dimen/dip_30"
            android:layout_marginTop="@dimen/dip_20"
            android:paddingTop="@dimen/dip_5"
            android:text="我要报名"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_20"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_40"
                android:drawableLeft="@mipmap/icon_mulv"
                android:drawablePadding="@dimen/dip_5"
                android:padding="@dimen/dip_5"
                android:text="王先生" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_40"
                android:drawableLeft="@mipmap/icon_dh"
                android:drawablePadding="@dimen/dip_5"
                android:padding="@dimen/dip_5"
                android:paddingBottom="@dimen/dip_10"
                android:text="13889666542" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_40"
                android:drawableLeft="@mipmap/icon_qq"
                android:drawablePadding="@dimen/dip_5"
                android:padding="@dimen/dip_5"
                android:text="123456789" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_40"
                android:drawableLeft="@mipmap/icon_wx"
                android:drawablePadding="@dimen/dip_5"
                android:padding="@dimen/dip_5"
                android:text="1234567542" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_40"
                android:drawableLeft="@mipmap/icon_emil"
                android:drawablePadding="@dimen/dip_5"
                android:padding="@dimen/dip_5"
                android:paddingBottom="@dimen/dip_10"
                android:text="13889666542" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dip_20"
            android:layout_height="@dimen/dip_60"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_titlepeixun" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/dip_30"
            android:paddingTop="@dimen/dip_20"
            android:text="版权所有：微聚赢网络科技有限公司" />
    </LinearLayout>
</ScrollView>