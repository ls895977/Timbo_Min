<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f4f4">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dip_1"
        android:orientation="vertical"
        android:padding="@dimen/dip_10">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/arena_button11111"
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_160"
                android:layout_weight="5"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_c1" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dip_5">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/item_profile_image111"
                        android:layout_width="@dimen/dip_35"
                        android:layout_height="@dimen/dip_45"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:src="@mipmap/icon_hader" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_arenadetall_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dip_5"
                            android:text="挑战者：刘晓萌"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/fond_12sp" />

                        <TextView
                            android:id="@+id/item_arenadetall_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dip_5"
                            android:paddingTop="@dimen/dip_5"
                            android:text="10岁  3年级"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/fond_12sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_5"
                    android:paddingTop="@dimen/dip_5"
                    android:text="成绩说明："
                    android:textColor="@color/gray"
                    android:textSize="@dimen/fond_12sp" />

                <TextView
                    android:id="@+id/item_arenadetall_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_5"
                    android:paddingTop="@dimen/dip_5"
                    android:text="踢键子，每分钏踢120下ß"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/fond_12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dip_40"
                    android:layout_height="wrap_content"
                    android:text="七小时前"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/fond_12sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_see"
                android:drawablePadding="@dimen/dip_5"
                android:text="14565334" />

            <TextView
                android:id="@+id/arenadetalzhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/icon_zhan"
                android:drawablePadding="@dimen/dip_5"
                android:text="1205" />

            <TextView
                android:id="@+id/arenadetaill_message111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dip_10"
                android:layout_toLeftOf="@+id/arenadetalzhan"
                android:drawableLeft="@mipmap/icon_pl"
                android:drawablePadding="@dimen/dip_5"
                android:text="532" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>