<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/item_latesactivity_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_160" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dip_35"
            android:layout_marginLeft="@dimen/dip_20"
            android:background="@drawable/bt_arenaselect"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_fa" />

            <EditText
                android:id="@+id/item_latestactivites_huodong"
                android:layout_width="@dimen/dip_80"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null" />

            <ImageView
                android:id="@+id/item_latestactivites_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_chaa" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_latestactivityes_geren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dip_20"
            android:text="个人活动"
            android:textColor="@drawable/tv_arena_color" />

        <TextView
            android:id="@+id/item_latestactivityes_qiye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dip_20"
            android:text="企业活动"
            android:textColor="@drawable/tv_arena_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dip_10">

        <TextView
            android:id="@+id/item_lateszuixin"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="最新"
            android:textColor="@drawable/tv_arena_color" />

        <TextView
            android:id="@+id/item_lateszuijin"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="最好"
            android:textColor="@drawable/tv_arena_color" />

        <TextView
            android:id="@+id/item_latesshzuire"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="最热"
            android:textColor="@drawable/tv_arena_color" />

        <TextView
            android:id="@+id/item_latesshjian"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="时间"
            android:textColor="@drawable/tv_arena_color" />

        <TextView
            android:id="@+id/item_lateslishihuodong"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="历史活动"
            android:textColor="@drawable/tv_arena_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_showLinearTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dip_10">


            <TextView
                android:id="@+id/item_latestactivites_oneday"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="一天内"
                android:textColor="@drawable/tv_arena_color"
                android:textSize="@dimen/fond_12sp" />

            <TextView
                android:id="@+id/item_latestactivites_thyday"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="三天内"
                android:textColor="@drawable/tv_arena_color"
                android:textSize="@dimen/fond_12sp" />

            <TextView
                android:id="@+id/item_latestactivites_zhou"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="一周内"
                android:textColor="@drawable/tv_arena_color"
                android:textSize="@dimen/fond_12sp" />

            <TextView
                android:id="@+id/item_latestactivites_yue"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="一个月内"
                android:textColor="@drawable/tv_arena_color"
                android:textSize="@dimen/fond_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dip_10"
                android:paddingRight="@dimen/dip_10"
                android:text="自定义时间"
                android:textColor="@drawable/tv_arena_color"
                android:textSize="@dimen/fond_12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/boder_ed">

                <EditText
                    android:id="@+id/item_startTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/fond_10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dip_10"
                android:paddingRight="@dimen/dip_10"
                android:text="至"
                android:textColor="@drawable/tv_arena_color"
                android:textSize="@dimen/fond_12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/boder_ed">

                <EditText
                    android:id="@+id/item_endTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/fond_10sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/time_latestactivities_sousuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/dip_10"
                android:paddingRight="@dimen/dip_10"
                android:src="@mipmap/icon_fa" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
