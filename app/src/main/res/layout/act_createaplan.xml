<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/dip_10"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingTop="@dimen/dip_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mycreateaplanback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_10"
            android:backgroundTint="@color/white"
            android:src="@mipmap/icon_mygrowth_title" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:paddingBottom="@dimen/dip_5"
        android:paddingLeft="@dimen/dip_40"
        android:paddingTop="@dimen/dip_5"
        android:text="计划管理"
        android:textColor="@color/fond_cloer"
        android:textSize="@dimen/fond_18sp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/myCreateaplan_RecyclerVIew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
