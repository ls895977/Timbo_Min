<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dip_40"
    android:layout_marginLeft="@dimen/dip_20"
    android:layout_marginRight="@dimen/dip_20"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dlg_register"
            android:orientation="vertical">

            <TextView
                android:id="@+id/xuexiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_hong"
                android:drawablePadding="@dimen/dip_5"
                android:padding="@dimen/dip_10"
                android:text="无该记录请创建"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_30"
                android:text="选择班级"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/registerclass_nianji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="222"
                        android:background="@drawable/boder_ed"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/dip_10"
                        android:text="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dip_10"
                        android:text="年"
                        android:textSize="@dimen/fond_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/registerclass_banji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="222"
                        android:background="@drawable/boder_ed"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/dip_10"
                        android:text="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dip_10"
                        android:paddingRight="@dimen/dip_10"
                        android:text="班"
                        android:textSize="@dimen/fond_16sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/registertv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dip_20"
                android:text="可以加入"
                android:textColor="@color/fond_cloer"
                android:textSize="@dimen/fond_16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/register_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:layout_marginTop="@dimen/dip_10"
                android:background="@drawable/cb_sl1"
                android:gravity="center_horizontal"
                android:padding="@dimen/dip_10"
                android:text="查询班级"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/register_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_20"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:layout_marginTop="@dimen/dip_10"
                android:background="@drawable/cb_sl1"
                android:gravity="center_horizontal"
                android:padding="@dimen/dip_10"
                android:text="我要加入"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btregister_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_20"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:layout_marginTop="@dimen/dip_10"
                android:background="@drawable/cb_sl2"
                android:gravity="center_horizontal"
                android:padding="@dimen/dip_10"
                android:text="我要创建"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/register_shutdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/dip_15"
        android:paddingLeft="@dimen/dip_15"
        android:paddingRight="@dimen/dip_30"
        android:paddingTop="@dimen/dip_15"
        android:src="@mipmap/icon_guan" />
</RelativeLayout>